<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visitas-->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% ultimaVistas.forEach(element => { %><!-- haciendo un recorrido de la estructura para cada elemento de la base de datos-->
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= element.id%>  "><!---invocando el elemento id -->
							<figure class="product-box_image">
								<img src="/images/products/<%= element.image %>" alt="imagen de producto"><!--invocando la imagen -->
							</figure>
							<article class="product-box_data">
								<h2> <%= element.price %> </h2><!--invocando el precop-->
								<span> <%= element.discount%>  </span>
								<p> <%= element.name %>  </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>

		</div>
	</div>

			<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% ofertas.forEach(element => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= element.id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%= element.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2> <%= element.price %> </h2>
								<span> <%= element.discount%>  </span>
								<p> <%= element.name %>  </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>